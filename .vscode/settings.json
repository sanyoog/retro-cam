{
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.import.gradle.enabled": true,
  "java.compile.nullAnalysis.mode": "automatic",
  "files.exclude": {
    "**/.gradle": true,
    "**/.idea": true,
    "**/build": true,
    "**/*.iml": true
  },
  "search.exclude": {
    "**/build": true,
    "**/.gradle": true
  },
  "[kotlin]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": false
  },
  "files.associations": {
    "*.kt": "kotlin",
    "*.kts": "kotlin"
  }
}
